<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="coopeagroPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>org.coopeagro.entidades.Usuario</class>
    <class>org.coopeagro.entidades.Agricultor</class>
    <class>org.coopeagro.entidades.Cliente</class>
    <class>org.coopeagro.entidades.Empleado</class>
    <class>org.coopeagro.entidades.Producto</class>
    <class>org.coopeagro.entidades.Compra</class>
    <class>org.coopeagro.entidades.DetalleCompra</class>
    <class>org.coopeagro.entidades.PagoCompra</class>
    <class>org.coopeagro.entidades.Venta</class>
    <class>org.coopeagro.entidades.DetalleVenta</class>
    <class>org.coopeagro.entidades.PagoVenta</class>
    <class>org.coopeagro.entidades.Inventario</class>
    <properties>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/coopeagro"/>
      <property name="javax.persistence.jdbc.user" value="coopeagro"/>
      <property name="javax.persistence.jdbc.password" value="coopeagro"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
